{% form 'cart', cart %}
  <fieldset>
    <legend>
      <h2>Your Cart</h2>
    </legend>


    <!-- if statement for if Cart is empty -->
    {% if cart.empty? %}

      <div class="container">
        <div class="alert alert-dark">
          Looks like your cart is empty.
        </div>
        <p>
          <a href="/collections/all" class="btn btn-dark text-uppercase">Continue Shopping</a>
        </p>
      </div>

    {% else %}

      {% for item in cart.items %}
        <div>
          <h3>{{ item.title }}</h3>
          <img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title }}">
          <p>{{ item.final_line_price | money_without_trailing_zeros }}</p>
          <br>
            <button class="btn btn-outline-secondary text-uppercase">	<a href="{{ item.url_to_remove }}">Remove</a></button>
          </a>
        </div>
        <br>

      {% endfor %}

      <hr>

      <h4>Total = {{ cart.total_price | money_with_currency }}</h4>

      <button
        type="submit"
        name="update"
        class="btn btn-outline-secondary text-uppercase">Update</button>
      <button
        type="submit"
        name="checkout"
        class="btn btn-dark text-uppercase">Checkout</button>

    </fieldset>
  {% endif %}
{% endform %}

{% schema %}
  {
    "name": "cart",
    "settings": [
      {
        "type": "page",
        "id": "cart",
        "label": "Add to Cart"
      }
    ]
  }
{% endschema %}