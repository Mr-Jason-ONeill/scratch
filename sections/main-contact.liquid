<h1>{{ page.title | upcase }}</h1>
<div class="contact-area">
  {% form 'contact', contact %}
    <fieldset>
      <legend>Enter Your Details</legend>
      <div class="container">
        <form action="#" method="post">
          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="Enter name"
              name="name">
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter email"
              name="email">
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="5"></textarea>
          </div>
          <button type="submit" class="btn btn-dark text-uppercase">Submit</button>
        </form>
      </div>
    </fieldset>
  {% endform %}
</div>

{% schema %}
  {
    "name": "contact",
    "settings": [
      {
        "type": "page",
        "id": "contact",
        "label": "Contact"
      }
    ]
  }
{% endschema %}