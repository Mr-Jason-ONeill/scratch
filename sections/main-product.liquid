<h2>{{ product.title }}</h2>
<p>{{ product.price | money_with_currency }}</p>

<div>
  {% comment %} product.description displays the same thing --> {% endcomment %}
  {{ product.content }}
</div>

{% form 'product', product %}
  <select name="id">
    {% for variant in product.variants %}
      <option value="{{ variant.id }}">
        {{ variant.title }}
      </option>
    {% endfor %}
  </select>

  <button type="submit" class="btn btn-dark text-uppercase">Add to Cart</button>
{% endform %}

{% schema %}
  {
    "name": "products",
    "settings": []
  }
{% endschema %}