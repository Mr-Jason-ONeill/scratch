<div class="featured">
  <a href=" {{ product.url }}">
    <img src="{{ product.featured_image | image_url: width: 300 }}" alt="Featured Product">
    <h3>{{ product.title | upcase }}</h3>
    <p>
      {{ product.price | money_with_currency }}
    </p>
  </a>
</div>
{{- product.title | link_to: product.url }}
